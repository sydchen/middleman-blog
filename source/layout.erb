<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <%= stylesheet_link_tag "main" %>
  </head>
  <body>

    <div class="container-fluid content">
      <header class="hero-unit">
        <a href="/"><h2>壯遊前夕</h2></a>
      </header>

      <%= partial 'nav_links' %>

      <div class="row-fluid">
        <div class="span8 main-content">
          <%= yield %>
        </div>

        <div class="span3 offset1 sidebar">
          <aside>
            <h4>Syd</h4>
            <img src="http://www.gravatar.com/avatar/ab6237f719d3ceb3d1329af116fe77f0?s=80">
          </aside>
          <aside>
            <h4>近期文章</h4>
              <div class="recently-articles">
              <% blog.articles[0...5].each do |article| %>
                <p><%= link_to article.title, article %></p>
              <% end %>
              </div>
          </aside>
          <aside>
            <h4>Tags</h4>
            <ul class="tags">
            <% blog.tags.each do |tag, articles| %>
              <%= content_tag(:li, (link_to tag, tag_path(tag))) %>
            <% end %>
            </ul>
          </aside>
        </div>
      </div>
    </div>
  </body>
</html>

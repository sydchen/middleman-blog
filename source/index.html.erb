---
pageable: true
per_page: 5
---

<% page_articles.each_with_index do |article, i| %>
<article>
  <h3><%= link_to article.title, article %></h3>
  <%= article.summary %>

  <% if article.summary.length < article.body.length %>
    <a href="<%= article.url %>" class="continue-reading">繼續閱讀</a>
  <% end %>

  <div class="metadata">發表於 <%= article.date.strftime('%Y-%m-%d %k:%M') %></div>
  <hr>
</article>
<% end %>

<% if paginate %>
  <% if prev_page %>
    <p><%= link_to '較新的文章', prev_page, class: 'pull-right' %></p>
  <% end %>
  <% if next_page %>
    <p><%= link_to '較舊的文章', next_page, class: 'pull-left' %></p>
  <% end %>
<% end %>
